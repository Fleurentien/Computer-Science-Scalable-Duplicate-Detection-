#################################- NEWLY ADDED PREPROCESSING FOR KEY-VALUE PAIRS - #################################

# EXTENSION for VESA/Mount bracket features
vesa_pattern_regex = re.compile(
    r'(\d+)\s*(mm)?\s*[xX×]\s*(\d+)\s*(mm)?'
)

# Normalize different VESA/Mount bracket values
  # Change everything into form like "100mm x 100mm"
def normalize_vesa_mm(value: str) -> str:
    v = str(value)

    # Make sure all separators are the same one 'x', otherwise replace it with 'x'
    v = re.sub(r'[×X\*]', 'x', v)

    def replace_vesa_dimens(m):
        a = m.group(1)   # first number
        b = m.group(3)   # second number
        # Add to every number 'mm' and a space such that all notation align
        return f"{a}mm x {b}mm"

    # Now apply the regex to the value and see if it matches, if it does is applies the replace function
    v = vesa_pattern_regex.sub(replace_vesa_dimens, v)

    return v

def normalize_units(value: str) -> str:
    v = str(value)

    # 1. Make all values lower case
    v = v.lower()

    # Normalize quotes to "inch"
    v = v.replace('"', 'inch')

    # Normalize inch variants
    inch_variants = ["inches", " inches", "-inch", " inch", "inch"]
    for w in inch_variants:
        v = v.replace(w, "inch")

    # Normalize hertz variants
    hertz_variants = ["hertz", " hertz", "hz", " hz", "-hz", "hz"]
    for h in hertz_variants:
        v = v.replace(h, "hz")

    # EXTENSION
    # 2. Normalize all info about 4k/8k: 4 k, 4-k, 4K -> 4k
    v = re.sub(r'(\d)\s*k', r'\1k', v)

    # 3. Normalize all weights variants
    weights_variants = ["lbs", " lbs", " lbs.", "lbs.", "lb", " lb", "pounds", " pounds", "pound", " pound"]
    for w in weights_variants:
        v = v.replace(w, "lbs")

    # 4. Normalize all power variants
    v = re.sub(r'(\d+(?:\.\d+)?)\s*w(atts?)?\b', r'\1watt', v)

    # 5. Normalize all hours variants
    hour_variants = ["hour", "hours", "hrs", " hour", " hours", " hrs"]
    for h in hour_variants:
        v = v.replace(h, "hours")

    # 6. Normalize all degrees variants
    degree_variants = ["degree", " degree", " degrees", "degrees", "◦", " ◦"]
    for d in degree_variants:
        v = v.replace(d, "degrees")

    # 7. Normalize all brightness variants
    nit_variants = ["cd/m2", "cd-m2", "nit", " cd/m2", " cd-m2", " nit", "nits", " nits"]
    for n in nit_variants:
        v = v.replace(n, "nit")

    # 8. Normalize all units about resolution
    v = re.sub(r'(\d)\s*k', r'\1k', v)
    v = re.sub(r'(\d)-k',  r'\1k', v)

    # 9. Normalize different resolution types
    resolution_variants = ["ultra hd", "uhd", " uhd", "ultra-high definition",
                           "ultra high definition", "ultra-hd", " ultra hd", " ultra-hd"]
    for res in resolution_variants:
        v = v.replace(res, "uhd")

    fullres_variants = ["full hd", "fhd", " fhd", " full hd", "full-hd", " full-hd"]
    for fullres in fullres_variants:
        v = v.replace(fullres, "fhd")

    # 10. Normalize some dimension measurements
    mm_variants = [" millimeters", " millimetres", "mm", " mm"]
    for m in mm_variants:
        v = v.replace(m, "mm")

    cm_variants = [" centimeters", " centimetres", "cm", " cm"]
    for c in cm_variants:
        v = v.replace(c, "cm")
    return v

    # 11. Normalize all weight measurements kg
    kg_variants = [" kilograms", "kilograms", " kilogram", "kilogram", " kg", "kg"]
    for k in kg_variants:
        v = v.replace(k, "kg")

def preprocessor(obj):
    if isinstance(obj, dict):
        for k, v in obj.items():
            if isinstance(v, (dict, list)):
                preprocessor(v)
            elif isinstance(v, str):
                normalized_v = normalize_units(v)

                 # EXTENSION --> Normalize all Mount bracket/VESA patterns
                key_lower = k.lower()
                if "mount" in key_lower or "vesa" in key_lower or "pattern" in key_lower:
                    normalized_v = normalize_vesa_mm(normalized_v)

                obj[k] = normalized_v
        return obj

    elif isinstance(obj, list):
        for i, v in enumerate(obj):
            if isinstance(v, (dict, list)):
                preprocessor(v)
            elif isinstance(v, str):
                obj[i] = normalize_units(v)
        return obj

    return obj

# Preprocess the data to normalize units
data = preprocessor(data)

#################################- ADDING BRAND NAMES AS MODEL WORDS - #################################
data_brands = pd.read_csv("tv_wikipedia.csv")
print("Brands wikipedia loaded!")
raw_brands_list = data_brands.iloc[:, 0].dropna().astype(str).str.strip().tolist()

# Some of the brands in the list contain more specification than the title does --> simplify first
def simplify_brand(b):
    b = b.strip()

    # remove corporate suffixes
    b = re.sub(r'\b(corporation|corp|inc|ltd|co)\.?$', '', b, flags=re.I).strip()

    # normalize spacing/capitalization
    return b.title()

popular_brands = [simplify_brand(b) for b in raw_brands_list]

def normalize_brand_name(b):
    if not isinstance(b, str):
        return None

    b = b.strip()
    if not b:
        return None

    # special cases for all-caps brands which need to be preserved
    special_caps = {
        "lg": "LG",
        "rca": "RCA",
        "tcl": "TCL",
        "vizio": "VIZIO",
    }

    lower = b.lower()
    if lower in special_caps:
        return special_caps[lower]

    return b.title()

def get_brand(product_title, features, popular_brand_list):
    # Case 1) If brand name is available from key
    raw_brand = features.get("Brand") or features.get("Brand Name") or None
    norm_brand = normalize_brand_name(raw_brand)
    if norm_brand is not None:
        return norm_brand

    # Case 2) Use title to find brand of product
    if not isinstance(product_title, str):
        return None

    title_lower = product_title.lower()
    candidates = []

    for b in popular_brand_list:
        b_lower = b.lower()
        if b_lower in title_lower:
            candidates.append(b)

    if not candidates:
        return None

    # If multiple match, pick the longest (e.g. "Philips Hue" > "Philips")
    best_brand = max(candidates, key=len)
    return normalize_brand_name(best_brand)

rows = []

for product_id, entries in data.items():
    for entry in entries:
        title = entry.get('title')
        shop = entry.get('shop')
        features = entry.get('featuresMap', {})

        # join all feature values into one long string
        features_string = " ".join(features.values())

        # final brand: either from features or searching the title
        final_brand = get_brand(title, features, popular_brands)

        rows.append({
            "ID": product_id,
            "Title": title,
            "Shop": shop,
            "Brand": final_brand,
            # The string of values of the featuresmap
            "Features": features_string,
            # The dictionary of the featuresmap
            "FeaturesDict": features
        })

complete_data = pd.DataFrame(rows, columns=["ID", "Title", "Shop", "Brand", "Features", "FeaturesDict"])
