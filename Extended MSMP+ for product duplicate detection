plt.xlabel("Fraction of comparisons")
plt.ylabel("PC")
plt.title("Pairwise Completeness (PC) vs Fraction of Comparisons")
plt.show()

# -------- F1 vs frac_comp --------
plt.figure()
plt.plot(x, agg_by_rb_sorted_8['F1'], '-o')
plt.xlabel("Fraction of comparisons")
plt.ylabel("F1")
plt.title("F1 vs Fraction of Comparisons")
plt.show()

# -------- F1* vs frac_comp --------
plt.figure()
plt.plot(x, agg_by_rb_sorted_8['F1_star'], '-o')
plt.xlabel("Fraction of comparisons")
plt.ylabel("F1*")
plt.title("F1* vs Fraction of Comparisons")
plt.show()
